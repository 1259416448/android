                            android:textSize="12sp" />

                        <ImageButton
                            android:id="@+id/index_item_three_btn_three"
                            android:layout_width="@dimen/index_item_btn_w"
                            android:layout_height="@dimen/index_item_btn_h"
                            android:layout_marginLeft="290dp"
                            android:layout_marginTop="67dp"
                            app:srcCompat="@drawable/fx_bowuguan" />

                        <TextView
                            android:id="@+id/index_item_three_text_three"
                            android:layout_width="36dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="289.5dp"
                            android:layout_marginTop="105dp"
                            android:text="博物馆"
                            android:textColor="#ffffff"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/index_item_three_text"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="275dp"
                            android:layout_marginTop="32dp"
                            android:text="文娱"
                            android:textColor="#ffffff"
                            android:textSize="25sp" />

                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/index_item_w"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:id="@+id/item_four"
                        android:layout_width="@dimen/index_item_w"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/index_item_m_left"
                        android:textAlignment="center">

                        <ImageView
                            android:id="@+id/index_item_four"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:background="@android:color/darker_gray"
                            app:srcCompat="@android:color/darker_gray" />


                        <ImageButton
                            android:id="@+id/index_item_four_btn_zero"
                            android:layout_width="@dimen/index_item_btn_w"
                            android:layout_height="@dimen/index_item_btn_h"
                            android:layout_marginBottom="28dp"
                            android:layout_marginLeft="139.5dp"
                            android:layout_marginTop="67dp"
                            app:srcCompat="@drawable/fx_bashi" />

                        <TextView
                            android:id="@+id/index_item_four_text_zero"
                            android:layout_width="24dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="145dp"
                            android:layout_marginTop="105dp"
                            android:text="巴士"
                            android:textColor="#ffffff"
                            android:textSize="12sp" />

                        <ImageButton
                            android:id="@+id/index_item_four_btn_one"
                            android:layout_width="@dimen/index_item_btn_w"
                            android:layout_height="@dimen/index_item_btn_h"
                            android:layout_marginBottom="28dp"
                            android:layout_marginLeft="190dp"
                            android:layout_marginTop="67dp"
                            app:srcCompat="@drawable/fx_ditie" />

                        <TextView
                            android:id="@+id/index_item_four_text_one"
                            android:layout_width="24dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="195dp"
                            android:layout_marginTop="105dp"
                            android:text="地铁"
                            android:textColor="#ffffff"
                            android:textSize="12sp" />

                        <ImageButton
                            android:id="@+id/index_item_four_btn_two"
                            android:layout_width="@dimen/index_item_btn_w"
                            android:layout_height="@dimen/index_item_btn_h"
                            android:layout_marginLeft="240dp"
                            android:layout_marginTop="67dp"
                            app:srcCompat="@drawable/fx_chuzu" />

                        <TextView
                            android:id="@+id/index_item_four_text_two"
                            android:layout_width="24dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="245.5dp"
                            android:layout_marginTop="105dp"
                            android:text="出租"
                            android:textColor="#ffffff"
                            android:textSize="12sp" />

                        <ImageButton
                            android:id="@+id/index_item_four_btn_three"
                            android:layout_width="@dimen/index_item_btn_w"
                            android:layout_height="@dimen/index_item_btn_h"
                            android:layout_marginLeft="290dp"
                            android:layout_marginTop="67dp"
                            app:srcCompat="@drawable/fx_feiji" />

                        <TextView
                            android:id="@+id/index_item_four_text_three"
                            android:layout_width="24dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="295.5dp"
                            android:layout_marginTop="105dp"
                            android:text="飞机"
                            android:textColor="#ffffff"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/index_item_four_text"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="275dp"
                            android:layout_marginTop="32dp"
                            android:text="交通"
                            android:textColor="#ffffff"
                            android:textSize="25sp" />

                    </RelativeLayout>
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

</LinearLayout>
