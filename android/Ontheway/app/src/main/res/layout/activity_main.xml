                            android:layout_height="15dp"
                            android:layout_marginLeft="245.5dp"
                            android:layout_marginTop="105dp"
                            android:text="书店"
                            android:textColor="#ffffff"
                            android:textSize="12sp" />

                        <ImageButton
                            android:id="@+id/index_item_two_btn_three"
                            android:layout_width="@dimen/index_item_btn_w"
                            android:layout_height="@dimen/index_item_btn_h"
                            android:layout_marginLeft="290dp"
                            android:layout_marginTop="67dp"
                            app:srcCompat="@drawable/fx_bianlidian" />

                        <TextView
                            android:id="@+id/index_item_two_text_three"
                            android:layout_width="36dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="289dp"
                            android:layout_marginTop="105dp"
                            android:text="便利店"
                            android:textColor="#ffffff"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/index_item_two_text"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="275dp"
                            android:layout_marginTop="32dp"
                            android:text="商店"
                            android:textColor="#ffffff"
                            android:textSize="25sp" />

                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/index_item_w"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:id="@+id/item_three"
                        android:layout_width="@dimen/index_item_w"
                        android:layout_height="@dimen/index_item_h"
                        android:layout_marginLeft="@dimen/index_item_m_left"
                        android:textAlignment="center">

                        <ImageView
                            android:id="@+id/index_item_three"
                            android:layout_width="match_parent"
