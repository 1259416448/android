<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <include layout="@layout/header" />
                <include layout="@layout/common_list" />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/zuji_bottom"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" android:orientation="horizontal" android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/create_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/ar_fabu" />

        <Button
            android:id="@+id/to_ar_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/ar_arditu" />

        <Button
            android:id="@+id/to_map_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ar_pingmian" />
    </LinearLayout>
</RelativeLayout>