<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:background="@drawable/dl_bg"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="75dp"
            android:layout_marginTop="70dp"
            android:layout_gravity="center"
            android:src="@drawable/white_cirtual"
            android:layout_height="75dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎使用on the way"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textColor="#FFFFFFFF"
            android:textSize="17sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/phone_line"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_text_boder"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <TextView
            android:id="@+id/phone_tv_icon"
            android:layout_width="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/dl_shouji"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:textColor="#202020"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/phone_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:background="@color/transparent"
            android:hint="输入正确的手机号"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/check_code_line"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_text_boder"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <TextView
            android:id="@+id/check_code_tv_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:drawableLeft="@drawable/dl_yanzhengma"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:textColor="#202020"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/check_code_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="输入验证码"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/send_sms_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:layout_marginRight="10dp"
            android:textColor="#E50834"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="331dp"
        android:background="@drawable/dl_button"
        android:id="@+id/login_btn_line"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_height="75dp">
        <Button
            android:id="@+id/login_btn"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_btn"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>