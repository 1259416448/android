<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"  android:background="@color/white">
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/reply_header_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/header_default"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="17.5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/reply_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/text_label_default"
                android:text="陈立"/>
            <TextView
                android:id="@+id/reply_time_tv"
                android:layout_marginTop="4.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02-12 13:23"
                android:textSize="12sp"
                android:textColor="@color/text_label_small"/>
        </LinearLayout>
        <Button
            android:id="@+id/reply_btn"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:text="回复"
            android:textSize="13sp"
            android:textColor="@color/text_label_small"
            android:background="#FFF4F4F4"/>
    </LinearLayout>

    <TextView
        android:id="@+id/reply_content_tv"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:textSize="16sp"
        android:textColor="@color/text_label_default"
        android:text="玩的很嗨啊，你是修了多长时间的图，树都变形了，大家都知道你长啥样，哈哈！"
        />
    <LinearLayout
        android:paddingLeft="15dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/main_photo_iv"
            android:layout_width="79dp"
            android:layout_height="79dp"
            android:src="@drawable/header_default"/>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@color/bg_default"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/source_name_tv"
                android:text="高迪"
                android:textColor="@color/text_label_default"
                android:textSize="15sp"/>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/source_content_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/text_label_small"
                android:textSize="13sp"
                android:layout_marginRight="10dp"
                android:text="对这个世界如果你有太多的抱怨 跌倒了 就不敢继续往前走 为什麼…"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>