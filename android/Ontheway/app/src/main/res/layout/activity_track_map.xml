<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="arvix.cn.ontheway.ui.track.TrackMapActivity">
    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <LinearLayout
        android:id="@+id/zuji_bottom"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/to_ar_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/ar_fabu" />

        <Button
            android:id="@+id/to_track_list_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/ar_list" />

        <Button
            android:id="@+id/to_map_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ar_pingmian" />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_above="@id/zuji_bottom"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="vertical">
        <Button
            android:layout_gravity="right"
            android:background="@drawable/ar_huanyipi"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/time_btn_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible">

                <Button
                    android:id="@+id/time_one_day"
                    android:layout_width="65dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/black_btn_50dp"
                    android:text="1天内"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/time_7_day"
                    android:layout_width="65dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/black_btn_50dp"
                    android:text="7天内"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/time_one_month"
                    android:layout_width="65dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/black_btn_50dp"
                    android:text="一个月内"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>


            <Button
                android:id="@+id/time_btn"

                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:background="@drawable/zj_shijian" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:layout_gravity="right">
            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/range_btn_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/r_100m"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/black_btn_50dp"
                    android:text="100m"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/r_500m"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/black_btn_50dp"
                    android:text="500m"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/r_1km"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/black_btn_50dp"
                    android:text="1km"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/range_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/juli" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:background="@drawable/back_1"
        android:id="@+id/back_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        />
</RelativeLayout>
