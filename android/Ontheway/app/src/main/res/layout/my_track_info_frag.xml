<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/my_track_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/wd_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/header_img_track"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="69dp"
        android:textAlignment="gravity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="想起一个很长的名字"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content" android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="4321"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝"
                android:layout_gravity="center"
                android:textColor="#FFC6C8"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#FFC6C8"
            android:layout_gravity="center"
            >
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="456"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFC6C8"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="关注"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#FFC6C8"
            android:layout_gravity="center"
            >
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="887"
                android:layout_gravity="center"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFC6C8"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="被赞"
                />
        </LinearLayout>
    </LinearLayout>





</LinearLayout>
    <LinearLayout android:id="@+id/track_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="6dp"
                android:background="@drawable/red_6dp_point"
                android:layout_height="6dp"/>
            <TextView
                android:layout_width="1dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:background="#D5D5D5"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12.5dp"
            android:textSize="17sp"
            android:textColor="@color/text_label_default"
            android:text="今天"
            />
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#EDEDED"
                />
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wd_xiangji"/>
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>