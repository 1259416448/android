<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/detail_root"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/content_line"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <include layout="@layout/header" />
        <include layout="@layout/common_list" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:minHeight="49dp">
        <EditText
            android:id="@+id/write_reply_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_label_default"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:background="@drawable/search_radius"
            android:minHeight="33dp"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/right_info_line"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/comment_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="432条评论"
                android:textColor="@color/text_label_small"
                android:textSize="11sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="33.5dp"
                android:layout_marginRight="37dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/zj_zan" />
                <TextView
                    android:id="@+id/like_number_tv"
                    android:layout_width="28dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="-6dp"
                    android:background="@drawable/like_number_bg"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="5432"
                    android:textColor="@color/white"
                    android:textSize="8sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>